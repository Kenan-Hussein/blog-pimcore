

{% if pimcore_select('text-position').isEmpty() %}
    {% do  pimcore_select('text-position').setDataFromResource('left') %}
{% endif %}

{% if editmode %}
    <div class="alert alert-info">
        Text Position: <br>
        {{ pimcore_select('text-position', {
            'store': ['left', 'right'],
            'reload': true
        }) }}
    </div>
{% endif %}

<div class="row mb-2">

        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
{#                <strong class="d-inline-block mb-2 text-primary-emphasis">World</strong>#}
                <h3 class="mb-0">{{ pimcore_input('headline1') }}</h3>
{#                <div class="mb-1 text-body-secondary">Nov 12</div>#}
                <p class="card-text mb-auto">{{ pimcore_wysiwyg('content') }}</p>
            </div>
            <div class="col-auto d-none d-lg-block">
                {{ pimcore_image('image', {'thumbnail':'blog-card-area-img', 'class': 'bd-placeholder-img'}) }}
